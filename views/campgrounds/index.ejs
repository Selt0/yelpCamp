<%- include('../partials/header') -%>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>
      <p>View our hand-picked campgrounds from all over the world!</p>
      <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground!</a></p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Campgrounds</h3>
    </div>
    <% campgrounds.forEach(campground => { %>
    <figure class="figure col-md-3 col-sm-6">
      <img src="<%= campground.image %>" alt="" class="figure-img img-fluid rounded" />
      <figcaption class="figure-caption"><%= campground.name%></figcaption>
      <p class="text-right">
        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
      </p>
    </figure>
  </div>
</div>

<% }) %> <%- include('../partials/footer') -%>
